<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/RLFirstMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/RLProfilePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:layout_alignBottom="@+id/RLMessage">

            <RelativeLayout
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:elevation="2dp"
                android:layout_centerHorizontal="true">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/RIVProfilePicture"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:riv_corner_radius="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_picture"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    android:layout_centerHorizontal="true"
                    app:cardUseCompatPadding="true" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RLMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_messaging_all_other_messages">

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/TVMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/lorem_ipsum_2"
                android:fontFamily="sans-serif"
                android:textColor="#99A3B0"
                android:textSize="12sp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>