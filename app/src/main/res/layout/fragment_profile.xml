<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/RLProfilePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="2dp"
                android:layout_centerHorizontal="true">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/RIVProfilePicture"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    app:riv_corner_radius="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_picture"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    android:layout_centerHorizontal="true"
                    app:cardUseCompatPadding="true" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/RLProfilePicture">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/RLNameAndPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_invite"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:elevation="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/background_button_login"
                        android:weightSum="20">

                        <TextView
                            android:id="@+id/TVFullName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="30dp"
                            android:text="Arif Batuhan Ã–ZKAYA"
                            android:gravity="center_vertical"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_weight="13"/>

                        <TextView
                            android:id="@+id/TVProfilePointValue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:text="3535"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/TVProfilePoint"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:fontFamily="sans-serif"
                            android:gravity="center|start"
                            android:textSize="13sp"
                            android:text="Point"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RLSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_settings"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:elevation="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/background_profile_background">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/settings"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/text_color" />


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RLInviteFriends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_invite"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:elevation="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/background_profile_background">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/invite_friends"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/text_color" />


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RLTOSAndPP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/TVTOSAndPP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tos_and_pp"
                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/text_color" />


                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        </RelativeLayout>

</RelativeLayout>